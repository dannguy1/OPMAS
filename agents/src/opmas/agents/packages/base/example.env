# Agent Identity (Required)
AGENT_NAME=Example Agent Name
AGENT_TYPE=example
AGENT_VERSION=1.0.0
AGENT_DESCRIPTION=This is an example agent description. Replace with your agent's purpose and capabilities.

# Agent Configuration (Required)
AGENT_ID=00000000-0000-0000-0000-000000000000  # Optional: Will be auto-generated if not provided
AGENT_PORT=8080
AGENT_HOST=0.0.0.0
AGENT_LOG_LEVEL=INFO

# NATS Configuration (Required)
NATS_URL=nats://localhost:4222
NATS_USER=opmas
NATS_PASSWORD=your_secure_password
NATS_TLS_VERIFY=false

# Agent Capabilities (Required)
DEFAULT_SUBSCRIBED_TOPICS=logs.example,logs.system
DEFAULT_FINDINGS_TOPIC=findings.example
DEFAULT_METRICS_TOPIC=metrics.example

# Resource Limits (Optional)
MAX_MEMORY_MB=512
MAX_CPU_PERCENT=50
MAX_DISK_MB=1024

# Security Settings (Optional)
TLS_ENABLED=false
TLS_CERT_PATH=/path/to/cert.pem
TLS_KEY_PATH=/path/to/key.pem
TLS_CA_PATH=/path/to/ca.pem

# Monitoring Settings (Optional)
HEARTBEAT_INTERVAL_SECONDS=30
METRICS_INTERVAL_SECONDS=60
LOG_RETENTION_DAYS=7

# Custom Configuration (Optional)
# Add any additional configuration variables your agent needs below
# CONFIG_KEY=value 