# Database Configuration
DATABASE_URL=postgresql+asyncpg://opmas:opmas@172.18.0.4:5432/opmas_mgmt
DB_ECHO=true
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# NATS Configuration
NATS_URL=nats://172.18.0.2:4222
NATS_USERNAME=
NATS_PASSWORD=
NATS_CLUSTER_ID=opmas-cluster

# Redis Configuration
REDIS_URL=redis://opmas-redis-1:6379/0
REDIS_PASSWORD=

# Security
SECRET_KEY=dev-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=24

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://192.168.10.8:3000

# API Settings
API_V1_PREFIX=/api/v1
PROJECT_NAME=OPMAS Management API
DEBUG=true
ENVIRONMENT=development

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=json
LOG_FILE=logs/opmas_mgmt_api.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus_multiproc

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_UPLOAD_EXTENSIONS=["json", "yaml", "yml", "txt"]
